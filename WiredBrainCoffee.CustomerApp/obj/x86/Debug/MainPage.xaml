<Page x:ConnectionId='1'
    x:Class="WiredBrainCoffee.CustomerApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WiredBrainCoffee.CustomerApp"
    xmlns:model="using:WiredBrainCoffee.CustomerApp.Model"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:WiredBrainCoffee.CustomerApp.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    d:DesignWidth="600"
    d:DesignHeight="500">
    <Page.Resources>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.ColumnSpan="3"
                    Background="#F05A28"
                    Orientation="Horizontal">
            <Image Source="Images/logo.png"
                   Height="90"
                   VerticalAlignment="Top"
                   Margin="10"/>
            <TextBlock Text="{StaticResource applicationTitle}"
                       FontSize="30"
                       FontWeight="ExtraBold"
                       Foreground="White"
                       VerticalAlignment="Bottom"
                       Margin="20"/>
            <TextBlock Text="Version 1.0"
                       Foreground="#333333"
                       VerticalAlignment="Bottom"
                       Margin="0 0 0 25"/>
        </StackPanel>

        <Button x:ConnectionId='2' Content="Toggle theme" 
                Grid.ColumnSpan="3"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="10"
                                               />

        <!-- Customer list -->
        <Grid x:ConnectionId='3' Grid.Row="1" 
              x:Name="customerListGrid"
              Background="{ThemeResource customerListBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal">
                <Button x:ConnectionId='7' Margin="10"                         >
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon x:ConnectionId='10' Symbol="Forward"
                                    x:Name="moveSymbolIcon"/>
                    </StackPanel>
                </Button>
                <Button x:ConnectionId='8' Margin="10"                                >
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Symbol="AddFriend"/>
                        <TextBlock Text="Add"
                                   Margin="5 0 0 0"/>
                    </StackPanel>
                </Button>
                <Button x:ConnectionId='9' Margin="10"                                   >
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Symbol="Delete"/>
                        <TextBlock Text="Delete"
                                   Margin="5 0 0 0"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <ListView x:ConnectionId='5' Grid.Row="1" 
                      x:Name="customerListView"
                                                                            
                                                                                    >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding FirstName,Mode=OneWay}"
                                       FontWeight="Bold"/>
                            <TextBlock Text="{Binding LastName,Mode=OneWay}"
                                       Margin="5 0 0 0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        
        <!-- Customer detail -->
        <controls:CustomerDetailControl x:ConnectionId='4' 
            Grid.Row="1"
            Grid.Column="1"
            x:Name="customerDetailControl"
                                                                      />
    </Grid>
</Page>

